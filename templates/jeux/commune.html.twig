        $(function() {
            $(document).on("click","#openTrappe",function(e){

                    if($('#onTalk').val()==0){
                        $('#onTalk').val(1);
                        dstination='couloircachot';
                        var request = $.ajax({
                            url: '/'+dstination,
                            type: "GET"
                        });
                        request.done(function(msg) {
                            $("#inThePlace").fadeOut(1000);
                            setTimeout(function(){
                                $("#inThePlace").hide();
                                $("#inThePlace").html(msg);
                                $("#inThePlace").fadeIn(1000);
                            }, 1000);

                        });
                    }

            })
        });
